upstream unicorn_<%= application %> {
  server unix:<%= unicorn_socket %> fail_timeout=0;
}

server {
  #listen 80 default deferred;
  listen 80;
  server_name www2.plazap.com.br;
  root <%= current_path %>/public;
  access_log  off;
  error_log off;

  client_max_body_size 10M;
  keepalive_timeout 10;

  location ~ ^/(assets)/ {
    gzip_static on;
    expires max;
    add_header Cache-Control public;
  }

  #For gem capistrano-maintenance
  if (-f $document_root/system/maintenance.html) {
    return 503;
  }
  error_page 503 @maintenance;
  location @maintenance {
    rewrite  ^(.*)$  /system/maintenance.html last;
    break;
  }


  location / {
      try_files $uri/index.html $uri.html $uri @unicorn_<%= application %>;
      error_page 404              /404.html;
      error_page 422              /422.html;
      error_page 500 502 503 504  /500.html;
      error_page 403              /403.html;
  }

  location @unicorn_<%= application %> {
    proxy_set_header X-Real-IP  $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    #proxy_set_header Host $host;
    proxy_set_header X-FORWARDED_PROTO $scheme;
    proxy_redirect off;
    proxy_pass http://unicorn_<%= application %>;
  }

  location = /favicon.ico {
    expires    max;
    add_header Cache-Control public;
  }

  location ~ \.php$ {
    deny all;
  }

}